<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
    <%= image_tag 'injera1.jpg', class: 'img-responsive images' %>
      <div class="carousel-caption">
        Looking For Something Fresh and Healthy?
      </div>
    </div>
    <div class="item">
    <%= image_tag 'veganflava3.jpg', class: 'img-responsive images' %>
      <div class="carousel-caption">
        Photos and Reviews From Real People!
      </div>
    </div>
    <div class="item">
    <%= image_tag 'seitan1.jpg', class: 'img-responsive images' %>
      <div class="carousel-caption">
        The Best Vegetarian Friendly Restaurants Here!
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>

<div class="greeting">
  <b><h1 class="hello">Welcome to Vegster.</h1>
    <p class="hello">
    The Triangle's Guide to Vegetarian and Vegan Friendly Eateries!<br />Sign Up To Submit Your Favorite Restaurant, add foodie pics &amp; more!
    </p>
</div>

<div class="pages">
  <%= will_paginate @places, previous_label: h("<"), next_label: h(">") %>
</div>


<% @places.each do |place| %>
<div class ="booyah-box col-xs-10 col-xs-offset-1" >
  <h2 class="link"><%= link_to place.name, place_path(place) %></h2><br />
  <i><%= place.address %></i><br /><br />
  <p><%= place.description %></p><br />
  

 <% if place.comments.present? %>
  <div class="booyah-box col-xs-12">
    <blockquote>
      <% if place.comments.last.humanized_rating.present? %>
        <b><%= place.comments.last.humanized_rating %></b> -
      <% end %>
      <%= place.comments.last.message %>
      <small><%= place.comments.last.user.email %></small>
    </blockquote>
  </div>
<% end %>


</div>
<% end %>
  

<div class="pages">
  <%= will_paginate @places, previous_label: h("<"), next_label: h(">") %>
</div>
