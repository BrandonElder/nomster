<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag 'injera1.jpg', class: 'img-responsive' %>
      <div class="carousel-caption">
        Healthy Food Here!
      </div>
    </div>
    <div class="item">
    <%= image_tag 'veganflava3.jpg', class: 'img-responsive' %>
      <div class="carousel-caption">
        Fresh and Delicious!
      </div>
    </div>
    <div class="item">
      <%= image_tag 'seitan1.jpg', class: 'img-responsive' %>
      <div class="carousel-caption">
        You Won't Miss The Meat!
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>

<div class="greeting">
  <br />
  <h3 class="hello">Welcome to Vegster.</h3>
    <p class="hello">
    <b>The Triangle's Guide to Vegetarian and Vegan Friendly Eateries!<br />Sign Up To Add Your Favorite Spot.</b>
    </p>
  <br />
</div>

<div class="center">
  <%= will_paginate @places, previous_label: h("<"), next_label: h(">") %>
</div>


<% @places.each do |place| %>
<div class ="booyah-box col-xs-10 col-xs-offset-1" >
  <h2 class="link"><%= link_to place.name, place_path(place) %></h2><br />
  <i><%= place.address %></i><br /><br />
  <p><%= place.description %></p><br />
  

  <% if place.photos.present? %>
    <%= image_tag place.photos.last.Picture, class: 'img-responsive' %>
  <% end %>
  

 <% if place.comments.present? %>
  <div class="booyah-box col-xs-12">
    <blockquote>
      <% if place.comments.last.humanized_rating.present? %>
        <b><%= place.comments.last.humanized_rating %></b> -
      <% end %>
      <%= place.comments.last.message %>
      <small><%= place.comments.last.user.email %></small>
    </blockquote>
  </div>
<% end %>


</div>
<% end %>
  

<div class="center">
  <%= will_paginate @places, previous_label: h("<"), next_label: h(">") %>
</div>



